    <id>http://yoursite.com/2020/06/11/%E4%BD%BF%E7%94%A8sharding%20jdbc%E4%BB%8Eoracle%E4%B8%AD%E5%AF%BC%E5%87%BA%E6%95%B0%E6%8D%AE%E5%B9%B6%E5%88%86%E8%A1%A8%E5%AD%98%E5%82%A8%E5%9C%A8mysql%E4%B8%AD/</id>
